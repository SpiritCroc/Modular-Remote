<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- No customization yet. -->
        <item name="alertDialogStyle">@style/AlertDialogStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="@style/AlertDialog.AppCompat">
        <item name="android:layout">@layout/abcd_alert_dialog_material</item>
    </style>

    <!-- Theme for views within dialogs. -->
    <style name="DialogTheme" parent="AppTheme">
        <item name="android:textViewStyle">@style/DialogTextViewTheme</item>
    </style>

    <!-- Themes for single views. -->
    <style name="DialogTextViewTheme" parent="android:TextAppearance.Widget.TextView">
        <item name="android:padding">@dimen/dialog_content_padding</item>
    </style>
    <style name="DialogTitleViewTheme" parent="DialogTextViewTheme">
        <item name="android:textColor">@color/text_title</item>
    </style>

</resources>
