<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/DialogTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/edit_match_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false"/>
        <TextView
            android:id="@+id/view_match_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_match_width"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/width_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_width"
        style="@style/DialogTitleViewTheme"/>
    <EditText
        android:id="@+id/edit_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:hint="@string/dialog_size_in_block_units"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_height"
        style="@style/DialogTitleViewTheme"/>
    <EditText
        android:id="@+id/edit_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:hint="@string/dialog_size_in_block_units"/>
</LinearLayout>